<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_bg"
    tools:context="bitcurve.zhuxiao.com.bitcurve.MainActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="5dp"
       android:orientation="horizontal">
       <ImageButton
           android:id="@+id/ib_theme_selector"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:onClick="refreshColor"
           android:background="@drawable/theme_selector"
           />
       <ImageButton
           android:layout_toRightOf="@id/ib_theme_selector"
           android:id="@+id/ib_refresh_selector"
           android:onClick="refresh"
           android:layout_marginLeft="5dp"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:background="@drawable/refresh_data_selector"
           />
       <TextView
           android:layout_toRightOf="@id/ib_refresh_selector"
           android:layout_marginLeft="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="25sp"
           android:textColor="@color/white_bg"
           android:gravity="center_vertical"
           android:text="hicoin.io"
           />
       <ImageButton
           android:layout_alignParentRight="true"
           android:layout_marginLeft="5dp"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:background="@drawable/menu"
           />
   </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/white_bg"
            android:gravity="center"
            />
        <TextView
            android:layout_gravity="center"
            android:textColor="@color/white_bg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="BTC"
            />
        <TextView
            android:textColor="@color/white_bg"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ETH"
            />
        <TextView
            android:textColor="@color/white_bg"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LTC"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/white_bg"
            android:gravity="center"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <bitcurve.zhuxiao.com.bitcurve.LineGraphicView
            android:background="#F8F8FF"
            android:id="@+id/line_graphic"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <bitcurve.zhuxiao.com.bitcurve.BarrageView
            android:id="@+id/containerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="BTC -------------------------------BTC"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/color_999999"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="BTC -------------------------------BTC"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/color_999999"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="BTC -------------------------------BTC"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/color_999999"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="BTC -------------------------------BTC"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/color_999999"
            />
    </LinearLayout>
</LinearLayout>
